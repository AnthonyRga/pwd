{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    {{ include('inc/navbar.html.twig') }}
    <div class="container">
        <a href="/admin" class="btn btn-nav btn-bot">Retour Admin</a>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Commentaire</th>
                <th scope="col">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
            <tr>
                <td>{{ comment.content}} </td>
                <td><a style="background-color:crimson;color:white;" href="{{ path('removeComment',{id: comment.id}) }}">DELETE</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
