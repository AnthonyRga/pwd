{% extends 'base.html.twig' %}
{% block title %}Se connecter{% endblock %}

{% block body %}

    <div class="container">
        <h1>Connexion</h1>
            <form action="{{ path('security-login') }}" method="post">
                <div class="form-group col-md-6">
                <input class="form-control" placeholder="username" required name="_username" type="text">
                </div>
                <div class="form-group col-md-6">
                <input class="form-control" placeholder="mot de passe" required name="_password" type="password">
                </div>
                <div class="form-group col-md-6">
                <button type="submit">Connexion</button>
                </div>
            </form>
    </div>

{% endblock %}